@model List<Slider>

@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive pt-3">
    <a asp-controller = "slider" asp-action = "create" style = "color:white; font-size: 20px"  class = "mb-3 btn btn-success">Create slider</a>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                <th>
                   Title
                </th>
                <th>
                   Text
                </th>
                 <th>
                   Subtitle
                </th>
                <th>
                   Setting
                </th>
               
            </tr>
        </thead>
        <tbody>
           @foreach (Slider slider in Model)
          {
               <tr>
                <td>
                    <img style = "width:300px; height:150px" src="~/assets/img/slider/@slider.Image">
                </td>
                <td>
                    @slider.Title
                </td>
                 <td>
                  
                        @slider.Text
                   
                </td>
                 <td>
                    @slider.Subtitle
                </td>
               
               <td>
                   <div class = "d-flex">
                       <div class="detail">
                           <a asp-controller = "Slider" asp-action = "Detail" asp-route-id = "@slider.Id" class="btn btn-primary"><i style="width:40px" class="fa-solid fa-info"></i></a>
                       </div>
                        <div class="edit">
                           <a asp-controller = "Slider" asp-action = "Edit" asp-route-id = "@slider.Id" class = "btn btn-warning"><i style="width:40px" class="fa-solid fa-pen-to-square"></i></a>
                       </div>
                        <div class="delete">
                           <a asp-controller = "Slider" asp-action = "Delete" asp-route-id = "@slider.Id" class = "btn btn-danger"><i style="width:40px" class="fa-solid fa-trash-can"></i></a>
                       </div>
                   </div>
                </td>
            </tr>
          }
        </tbody>
    </table>
</div>


